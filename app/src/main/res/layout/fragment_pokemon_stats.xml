<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarThumbHorizontal="@android:drawable/button_onoff_indicator_on"
    tools:context=".pokedex.PokemonStatsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statsVida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <SeekBar
            android:id="@+id/seekBarVida"
            android:layout_width="237dp"
            android:layout_height="23dp"
            android:background="#00AE3434"
            android:max="255"
            android:progressBackgroundTint="#AB8AE6"
            android:scrollbarSize="8dp"
            android:thumb="@drawable/image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statsPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <SeekBar
            android:id="@+id/seekBarPeso"
            android:layout_width="237dp"
            android:layout_height="23dp"
            android:background="#00AE3434"
            android:max="255"
            android:progressBackgroundTint="#AB8AE6"
            android:scrollbarSize="8dp"
            android:thumb="@drawable/image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statsAtq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <SeekBar
            android:id="@+id/seekBarAtq"
            android:layout_width="237dp"
            android:layout_height="23dp"
            android:background="#00AE3434"
            android:max="255"
            android:progressBackgroundTint="#AB8AE6"
            android:scrollbarSize="8dp"
            android:thumb="@drawable/image" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statsDef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <SeekBar
            android:id="@+id/seekBarDef"
            android:layout_width="237dp"
            android:layout_height="23dp"
            android:background="#00AE3434"
            android:max="255"
            android:progressBackgroundTint="#AB8AE6"
            android:scrollbarSize="8dp"
            android:thumb="@drawable/image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statsAtqSpecial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <SeekBar
            android:id="@+id/seekBarAtqSpecial"
            style="@android:style/Widget.SeekBar"
            android:layout_width="237dp"
            android:layout_height="23dp"
            android:background="#00AE3434"
            android:max="255"
            android:progress="50"
            android:progressBackgroundTint="#AB8AE6"
            android:scrollbarSize="8dp"
            android:thumb="@drawable/image" />
    </LinearLayout>

</LinearLayout>