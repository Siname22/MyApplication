<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarSize="10dp"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbarThumbHorizontal="@android:drawable/button_onoff_indicator_on"
    android:scrollbars="vertical"
    android:verticalScrollbarPosition="right"
    tools:context=".pokedex.PokemonFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pokemon4"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textinfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pokemon4"
                android:text="TextView" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pokemon4"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textinfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pokemon4"
                android:text="TextView" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pokemon4"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textinfo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pokemon4"
                android:text="TextView" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pokemon4"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textinfo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pokemon4"
                android:text="TextView" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>